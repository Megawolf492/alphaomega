<% provide(:title, @quiz.name) %>
<% content_for :pageBar do %>
	<%= link_to "Topics", topics_path %> > <%= link_to @topic.name, topic_path(@topic) %> > <%= link_to @quiz.name, quiz_path(@quiz) %>
<% end %>

<%= form_tag grade_quiz_path do %>
	<%= hidden_field_tag "difficulty", @difficulty %>
	<% @questions.each do |question| %>
		<%= hidden_field_tag ("id" + @counter.to_s), question.id %>
		<p><%= question.text %></p>
		<% question.answers.each do |answer| %>
			<p><%= label_tag answer.text %> <%= radio_button_tag("guess" + @counter.to_s, answer.text)%></p>
		<% end %>
		<% @counter += 1 %>
		<br/>
	<% end %>
	<%= submit_tag "Finish" %>
<% end %>