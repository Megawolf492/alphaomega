<% provide(:title, @quiz.name) %>
<% content_for :pageBar do %>
	<%= link_to "Topics", topics_path %> > <%= link_to @topic.name, topic_path(@topic) %> > <%= link_to @quiz.name, quiz_path(@quiz) %>
<% end %>
<p><%= @quiz.name %></p>

<h4>Easy</h4>

<% @easy.each do |question| %>
	<p><%= question.text %>    <%= question.maxValue %></p>
	<ul>
		<% question.answers.each do |answer| %>
			<li><%= answer.text %>      <%= answer.value %> </li>
		<% end %>
	</ul>
<% end %>

