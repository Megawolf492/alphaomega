<!DOCTYPE html>
<html>
	<head>
	  <title><%= fullTitle(yield(:title))%></title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

		<div id="navigation">
			<%= render 'layouts/header' %>
		</div>

		<div id="pagebar">
			<%= fullPageBar(yield(:pageBar)) %>
		</div>
		<div id="content">
			<% flash.each do |key, value|%>
				<p><%= value%></p>
			<% end%>

			<%= yield %>

			<p id="footer">
				<%= link_to "About", about_path%> | <%= link_to "Links", links_path%>
			</p>
		</div>
	</body>
</html>
