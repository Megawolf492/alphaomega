<% provide(:title, "Create Topic") %>
<% content_for :pageBar do %>
	<%= link_to "Topics", topics_path %> > <%= link_to "Create Topic", new_topic_path %>
<% end %>

<%= nested_form_for @topic, html:{multipart: true} do |f| %>
	
	<%= render 'editTopic', f: f %>

	<%= f.submit "Create Topic"%>
<% end %>