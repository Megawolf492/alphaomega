<% if !@videos.empty? %>
	<h5><%= "Video".pluralize(@videos.count) %></h5>
<% end %>

<% if @videos.count > 1 || @videos.count == 0 %>
	<% @videos.each do |video| %>
		<p><%= link_to video.name, video%>
			<% if userSignedIn? && currentUser.viewed?(video)%>
				Viewed
			<% end %> 
		</p>
	<% end %>
<% else %>
	<%= video_tag "/topics/#{@video.topic.id}/videos/" + @video.filename, :controls => true %>
<% end %>